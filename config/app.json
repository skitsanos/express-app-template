{
  "errors": {
    "logHttpErrors": true,
    "reportErrorsAs": "html",
    "showStack": true
  },
  "parsers": {
    "json": true,
    "urlEncoded": true,
    "forms": true,
    "cookies": true
  },
  "uploads": {
    "storage": "/uploads/",
    "limit": 10485760
  },
  "cms": {
    "enabled": true,
    "mountPath": "/cms"
  },
  "strictRouting": false,
  "viewEngine": "hbs"
}
